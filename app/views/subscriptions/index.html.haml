#subscriptions-inner
  
  #vertical-people{:class => @creators.empty? ? "empty" : ""}
    %h1 People
    - if @creators.empty?
      .empty You are currently not subscribed to anyone's updates. #{link_to "Check out some of our awesome creators!", "#{root_path}#browse", :id => "find-creators"}
    %ul
      - @creators.each do |person|
        %li.person
          = link_to image_tag(person.avatar.url(:thumbnail), :alt => ""), user_path(person), :class => "tooltipped-e", :title => "Show #{person.first_name}'s updates", :data => person.id
  
  - unless @creators.empty? 
    #vertical-list
      %h1 Their updates
      .helper use keyboard

      %ul#activity-list
        - @activity.each do |activity|
          = render :partial => "subscriptions/content", :locals => { :content => activity.action } if activity.action_type == "Story"
          = render :partial => "subscriptions/broadcast", :locals => { :broadcast => activity.action } if activity.action_type == "Broadcast"

:javascript
  var scrollables_selector = '#activity-list';
  var user_id = '#{current_user.id}';
= javascript_include_tag "content_scroller"
= javascript_include_tag "subscriptions"
= javascript_include_tag "comments"