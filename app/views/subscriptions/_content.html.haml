%li.content
  = link_to image_tag(content.user.avatar.url(:thumbnail)), user_path(content.user), class: "avatar"
  .headline #{link_to content.user.name, user_path(content.user)} shared some new work
  - if content.text_preview?
    %a.content-preview.tiny{:href => story_path(content), :class => "#{content.media_type} #{content.template}"}
      .inner
        .image
        .quote= truncate(content.template_text, :length => 140)
  - else
    %a.content-preview.tiny{:href => story_path(content), :class => content.media_type}
      .inner{:style => "background-image: url(#{content.thumbnail.url(:large)})"}
  = link_to content.title, story_path(content), class: "title"
  %p= truncate(content.synopsis, length: 200)