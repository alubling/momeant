- if @page.has_styles?
  - content_for :head do
    :css
      #page_#{@page.number} {
        background-color: ##{@page.background_color} !important;
        color: ##{@page.text_color} !important;
      }

- @preview ||= false
%ul.cells
  - 8.times do |num|
    - cell = num + 1
    %li
      - if @page.image_at_position(cell)
        .image{:style => "background-image: url(#{@page.image_at_position(cell).image.url})"}
      .text{:class => @page.image_at_position(cell) ? "hidden" : ""}
        .inner
          = @page.text_at_position(cell).text if @page.text_at_position(cell)