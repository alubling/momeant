- if @page.has_styles?
  - content_for :head do
    :css
      #page_#{@page.number} {
        background-color: ##{@page.background_color} !important;
      }
      
- preview ||= false
- if preview
  = image_tag("/images/page-themes/video-thumbnail.jpg")
- elsif @page.text
  %iframe{:class => "video-frame", :src => "http://player.vimeo.com/video/#{@page.text}", :width => "800", :height => "450", :frameborder => "0"}