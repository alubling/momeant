- if @page.has_styles?
  - content_for :head do
    - if @page.background_color
      :css
        #page_#{@page.number} {
          background-color: ##{@page.background_color} !important;
        }
    - if @page.text_color
      :css
        #page_#{@page.number} {
          color: ##{@page.text_color} !important;
        }

- preview ||= false
.split
  .image
    .inner
      - if preview
        = image_tag(@page.image.url(:medium)) if @page.image
      - else
        = image_tag(@page.image.url) if @page.image
  .text
    .inner
      = @page.text