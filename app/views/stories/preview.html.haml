.story-preview
  = bookmark_button(@story)
  = recommend_button(@story)

  %h2
    Preview of
    %span.title= @story.title
  .creator Creator: #{link_to(@story.user.name, user_path(@story.user))}

  .excerpt= @story.excerpt
  
  %ul.topics
    %h3 Topics
    = @story.topics.map{|t| t.name}.join(', ')
    
  .price
    = story_price(@story)