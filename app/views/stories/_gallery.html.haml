.story-gallery
  .large-preview
    .pages
      - counter = 0
      - @stories.each do |story|
        %a.story-link.thumbnail{:href => preview_story_path(story), :counter => counter, :class => story.thumbnail ? story.thumbnail.css_class : ""}
          - if story.thumbnail
            - @page = story.thumbnail
            = render :partial => "stories/page_themes/#{@page.partial_name}", :locals => {:size => "large"}
          - elsif !story.published?
            .incomplete incomplete story
          .hidden= story.title
          - counter += 1
  .gallery-title
    - if @user.is_a?(Creator)
      My Created Stories
    - else
      My Recommended Stories
  .slider
    .scrollbar-me
      .viewport
        .overview
          - counter = 0
          - @stories.each do |story|
            .preview.petite{:counter => counter, :class => story.thumbnail ? story.thumbnail.css_class : ""}
              - if story.thumbnail 
                - @page = story.thumbnail
                = render :partial => "stories/page_themes/#{@page.partial_name}", :locals => {:size => "petite"}
              - elsif !story.published?
                .incomplete incomplete story
              - counter += 1
      .scrollbar
        .track
          .thumb
            .end