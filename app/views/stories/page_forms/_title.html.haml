= hidden_field_tag "pages[#{@page_number}][type]", "title"
.title.page-theme.pane-insides
  .header
    .title Title
    = link_to("Change", "#", :class => "change")
    .spinner Saving...
  .copy Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
  .body
    %fieldset
      %ul
        %li
          %label Type your title below...
          - if @page && @page.text
            = text_area_tag "pages[#{@page_number}][text]", @page.text, :class => "monitor-typing background-color-affected color-affected"
          - else
            = text_area_tag "pages[#{@page_number}][text]", "", :class => "monitor-typing background-color-affected color-affected"