- content_for :head do
  = javascript_include_tag "flipbook"
  
- if current_user.blank?
  = render :partial => "shared/calls_to_action/signup", :locals => {:message => "Join the community, support creators, and become a mo&#149meant patron"}

.homepage
  %section#flipbook
    .flipbook
      .controls
        .left.tooltipped-w{:title => "Previous"}
        .right.tooltipped-e{:title => "Next"}
      .flipstrip
        .slides
          = render "home/editorials/communications"
    
  %section.story-tabs
    .tabs
      = link_to("recent", "recent", :class => "active")
      = link_to("popular", "popular")
    %ul.recent.stories.tabcontent
      = render @stories
    %ul.popular.stories.tabcontent.hidden
      = render @popular_stories
  
  %section.adverts
    = render @adverts