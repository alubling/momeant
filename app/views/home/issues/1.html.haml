  %header#intro
    = image_tag @issue.header_background.url, id: "header-background"
    = image_tag @issue.header_title.url, id: "header-title"
    #curated-by
      %h3 Curated By
      = image_tag @issue.curator.avatar.url(:large)
      %h2= @issue.curator.name
