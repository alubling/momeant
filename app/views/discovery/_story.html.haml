%li
  .content-info
    = link_to image_tag(story.thumbnail.url(:medium)), story_path(story), :class => "thumbnail"
    = link_to truncate(story.title, :length => 40), story_path(story), :class => "title"
    %a.synopsis{:href => story_path(story)}
      - unless story.synopsis.blank?
        .text= truncate story.synopsis, :length => 120
      .tags= truncate story.tag_list.join(", "), :length => 100

  .user-rewards-with-comments
    .title
      %span.reward-count= story.reward_count
      - extra_text = story.users_who_rewarded.count > 6 ? " and #{story.users_who_rewarded.count - 6} more" : ""
      %span from these folks#{extra_text}:
    %ul
      - story.users_who_rewarded.limit(6).each do |user|
        %li
          = link_to image_tag(user.avatar.url(:thumbnail)), user_path(user), :class => "avatar tooltipped", :title => user.name