#discovery-page
  = render "discovery/content_nav"
  
  %section
    .top-description
      %h3
        Popular content
      %p.description
        %span The most rewarded content in the past two weeks.
    
    %ul.content-thumbnail-list.discovery-list
      - @popular_content.each do |story|
        = render "discovery/story", :story => story