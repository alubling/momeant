#creator-info.left-side
  = link_to(image_tag(@story.user.avatar.url(:large)), creations_user_path(@story.user), :class => "avatar")
  .byline
    content by
    = link_to @story.user.name, creations_user_path(@story.user)
  .message
    - if @story.thankyou.present?
      = truncate(@story.thankyou, :length => 260)
    - elsif @story.user.thankyou.present?
      = truncate(@story.user.thankyou, :length => 260)
    - else
      Thank you so much for your support!

#reward-box.right-side
  #share.section
    .info
      %h3.impact
        %span Promote #{@story.user.first_name} and make an
        %span.icon Impact
      = link_to "what is Momeant Impact?", "#what-is-impact-modal", :id => "what-is-impact"
      .hidden
        #what-is-impact-modal

    #copy-paste
      %form= text_field_tag :url_to_share, story_url(@story, :impacted_by => @reward.id), :readonly => true
      .weak Copy this URL to share #{@story.user.first_name}'s content with others.

    #twitter-sharing
      - if @twitter_configured
        = render "rewards/modal/twitter_sharing"
      - else  
        .padded
        .not-configured
          %span Want to share this with your Twitter followers?
          = link_to("Launch Twitter Configuration", "#{root_url}auth/twitter", :id => "configure-twitter")

    #facebook-sharing
      - if @facebook_configured
        = render "rewards/modal/facebook_sharing"
      - else
        .not-configured
          %span Want to share this with your Facebook friends?
          = link_to("Launch Facebook Configuration", "#{root_url}auth/facebook", :id => "configure-facebook")

:javascript
  mpq.track('Rewarded Content', {story_id: '#{@story.id}', mp_note: '#{@reward.amount} reward coins'});
  RewardModal.monitor_sharing(#{@reward.id});