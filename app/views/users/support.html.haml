#support
  
  #vertical-people
    %h1 People
    %ul
      - @creators.each do |person|
        %li
          = image_tag person.avatar.url(:thumbnail)
          = link_to person.name, user_path(person), :class => "cover tooltipped-e", :title => person.name
          
  #vertical-content
    %h1 Their updates
    .helper use keyboard

    %ul#content-list
      - index = 0
      - @content.each do |content|
        %li
          %a.content-preview{:id => "content-#{index}", :href => story_path(content)}
            = image_tag content.thumbnail.url(:large), :class => "thumbnail"
            .media-type{:class => content.media_type}
            = image_tag content.user.avatar.url(:thumbnail), :class => "avatar"
      
          .info
            = link_to content.title, story_url(content), :class => "title"
            .byline= link_to content.user.name, user_path(content.user)
            %p= content.synopsis
            = #link_to "View #{content.this_media}", story_path(content), :class => "view-button"
          
          .rewards
            - if content.users_who_rewarded.empty?
              = link_to "Become the first supporter &rarr;".html_safe, story_path(content), :class => "be-next"
            - else
              %h3 Recent supporters
              - size = content.users_who_rewarded.size - 1
              - size = size > 9 ? 9 : size
              - content.users_who_rewarded[0..size].each do |user|
                .reward
                  = image_tag user.avatar.url(:thumbnail)
                  = link_to "", user_path(user), :class => "cover tooltipped", :title => user.name
              = link_to "View &amp; Support &rarr;".html_safe, story_path(content), :class => "be-next"
          
          .when #{time_ago_in_words(content.created_at)} ago
            
        - index += 1

:javascript
  var scrollables_selector = '#content-list';
= javascript_include_tag "content_scroller"