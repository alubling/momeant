#user-profile.no-right-column
  
  #profile-center.column
    .inner
      %h2 You have pledged #{number_to_currency(@user.pledged_amount)} to the following creators:

      %div
        - @rewards.each do |reward|
          = link_to image_tag(reward.recipient.avatar.url(:thumbnail)), user_path(reward.recipient), :class => "tooltipped", :title => reward.recipient.name
      
      %p Paying for pledged rewards is coming very soon!
  
  #profile-left.column
    = render "users/user_info"