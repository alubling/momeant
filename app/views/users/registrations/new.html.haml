%h2 Sign up

- resource ||= @user
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:multipart => true}) do |f|
  = devise_error_messages!
  
  %fieldset
    %ul
        
      %li
        = f.label :first_name, "Your name"
        %span.aside
          = f.text_field :first_name
          = f.label :first_name, "First"
        %span.aside
          = f.text_field :last_name
          = f.label :last_name, "Last"
      
      %li
        = f.label :email
        = f.text_field :email
        
      %li
        = f.label :password
        %span.aside
          = f.password_field :password
          = f.label :password, "At least 6 characters, please"
        %span.aside
          = f.password_field :password_confirmation
          = f.label :password_confirmation, "Once more, to be sure"
      
      %li
        = f.label :avatar
        = f.file_field :avatar

      %li.submit
        = f.submit "Sign up"

= render :partial => "users/shared/links"

:javascript
  $('#user_name').focus();