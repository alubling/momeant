.user-profile
  = render "users/user_info"
  = render "users/user_tabs"

  - @creators.each do |creator, rewards|
    .creator
      .info
        = link_to(image_tag(creator.avatar.url(:thumbnail)), user_path(creator), :class => "avatar")
        .name
          %span= creator.first_name
          %span= creator.last_name
      .impact
        %span.value= @user.impact_on(creator)
        %span Your IMPACT on #{creator.first_name}
      %ul.content
        - rewards.each do |reward|
          %li
            = link_to(reward.story.title, reward.story, :class => "title")
            = link_to(image_tag(reward.story.thumbnail.url(:small)), reward.story, :class => "thumbnail")
            .gave You gave this #{reward.amount}, which led to:
            .people #{pluralize(reward.descendants.count, "more person")} rewarding
            .impact= pluralize(reward.impact - reward.amount, "more reward star")
          
        
  - if me?(@user) && @user.is_admin?
    .admin
      %h1 Admin
      .link= link_to("Pay Periods", admin_pay_periods_path)
      .link= link_to("Invitations", admin_invitations_path)
      .link= link_to("Adverts", admin_adverts_path)
      .link= link_to("Live View", admin_live_path)