#user-profile.no-right-column
  
  #profile-center.column
    #statement
      %em I reward content
      - if me?(@user)
        %span#edit-reward-reason.tooltipped-n{:title => "Tell others why you believe in rewarding (in 140 characters or less)."}
          = truncate(@user.i_reward_because, :length => 140) || "..."
      - else
        %span= truncate(@user.i_reward_because, :length => 140) || "..."
    #reward-total
      .amount= number_to_currency(@user.given_rewards.sum(:amount) * Reward.dollar_exchange)
      .text cash raised
    
    #carousel
      .title I recently rewarded
      - first = true
      - @users.each do |user|
        = link_to image_tag(user.avatar.url(:large)), "#", :class => "tooltipped #{first ? "selected" : ""}", :title => user.name, :data => user.id
        - first = false
    
    #vertical-list
      %ul#activity-list
        = render "users/patronage_list"
              
  #profile-left.column
    = render "users/user_info"

  .clear

:javascript
  var user_id = #{@user.id};
  var my_page = #{me?(@user)};
= javascript_include_tag "jquery.editinplace"
= javascript_include_tag "users/patronage"