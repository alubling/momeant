#user-profile.no-right-column
  
  #profile-center.column
    #activity-surround{:class => @activity.empty? && me?(@user) ? "new-user-no-activity" : ""}
      #activity
        #activity-body  
          #activity-loading Just a momeant...

          - if @activity.empty? && me?(@user)
            #new-user-no-activity
              %h1
                %span Yay! Weâ€™ve given you 10 reward coins for free!
              %p
                %span Use these coins to reward others for their great content.
              %p
                %span As you start rewarding, and
                = link_to "creating your own content", user_path(current_user)
                %span , you will see a list of that activity and its impact show up here.
          
              #activity-example
                Example activity:
          - else
            %ul#activity-list
              = render @activity
              - if @activity.empty?
                %li.none No activity.
            = link_to "Load more...", "#", :id => "load-more-activity" unless @activity.empty?


  #profile-left.column
    = render "users/user_info"
  
:javascript
  var user_id = '#{@user.id}';
  var activity_url = '/users/' + #{@user.id} + '/more_activity';
= javascript_include_tag "users/activity"
= javascript_include_tag "users/show"
  
- if me?(@user)
  :javascript
    mpq.track('Viewed My Activity');
- else
  :javascript
    mpq.track('Viewed Activity', {mp_note: '#{@user.name}'});