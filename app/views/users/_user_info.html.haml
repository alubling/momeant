.profile-info
  .avatar-badge-name
    - if @user.avatar.url.include?("missing")
      = link_to(image_tag(@user.avatar.url(:large)), edit_user_path(@user), :class => "avatar")
    - else
      = link_to(image_tag(@user.avatar.url(:large)), user_path(@user), :class => "avatar")
    = image_tag("badges/#{@user.badge_level}.png", :class => "badge")
    .name= @user.name
  
  %ul.nav
    %li= link_to_active "<span>Activity</span>".html_safe, user_path(@user), :class => "activity"
    %li= link_to_active "<span>Content</span>".html_safe, creations_user_path(@user), :class => "content"
    %li= link_to_active "<span>Info</span>".html_safe, info_user_path(@user), :class => "info"
    - if me?(@user)
      - message_text = @user.unread_message_count > 0 ? "<span>Messages (#{@user.unread_message_count})</span>" : "<span>Messages</span>"
      %li= link_to_active message_text.html_safe, user_messages_path(@user), :class => "message"
    - else
      %li= link_to "<span>Message #{@user.first_name}</span>".html_safe, user_messages_path(@user), :class => "message"