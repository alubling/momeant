- highlight_user ||= nil
%li
  = link_to image_tag(comment.user.avatar.url(:thumbnail)), user_path(comment.user), :class => "commenter-avatar"
  %a{href: user_path(comment.user), class: "commenter-name"}
    %span= comment.user.name
    - if comment.user == highlight_user
      %span.highlighted Creator
  .text= comment.comment
  .metadata
    %span.time #{time_ago_in_words(comment.created_at)} ago
    - if comment.reward
      %span.reward (#{number_to_currency(comment.reward.amount)})