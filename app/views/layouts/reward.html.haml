!!!
%html{html_attrs('en')}
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %meta{ :name => "Description", "http-equiv" => "Description", :content => @story.synopsis }
    %meta{ :name => "og:image", :property => "og:image", :content => @story.thumbnail.url(:tiny)}
    %meta{ :name => "Keywords", "http-equiv" => "Keywords", :content => "momeant, digital content, creators, reward, patron, art, community, sustainable" }
    %link{ :id => 'favicon', :href => '/images/favicon.png', :rel => 'icon', :type => 'image/x-icon' }
    %title
      - if @story && @nav != "home"
        = @story.title
      - elsif @page_title
        = "Momeant - #{@page_title}"
      - else
        Momeant
      
    = csrf_meta_tag
      
    = javascript_include_tag "jquery-1.4.3.min", "jquery-ui-1.8.18.min", "jquery.tipsy", "jquery.fancybox-1.3.4.pack"
    = javascript_include_tag "underscore-min", "backbone-min", "rails", "observe_field"
    / [if lt IE 9]
      = javascript_include_tag "http://html5shiv.googlecode.com/svn/trunk/html5.js"
    
    = stylesheet_link_tag "reset", "tipsy", "jquery-ui-1.8.18", "jquery.fancybox-1.3.4", "reward_modal", "extras"
    /[if lt IE 7]
      = stylesheet_link_tag "ie"
    
    = render "shared/typekit"
    = render "shared/mixpanel"
    = yield :head
  
  %body#reward-modal
    #inner= yield
  
    = javascript_include_tag "stories/reward_modal"