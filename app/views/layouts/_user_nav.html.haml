%ul#user-nav

  %li#logo= link_to "Momeant", root_path, :class => "top-link"
  
  %li#discover
    = link_to "Discover", discovery_path, :class => "tooltipped", :title => "Discover"
    
  - if user_signed_in?
    %li#feed
      = link_to "Feed", subscriptions_path, :class => "tooltipped", :title => "Following Feed"
      #feed-plus-one
  - else
    %li#feed.disabled
      = link_to "Feed", "#join-modal", :class => "tooltipped", :title => "Following Feed"
      
  - if user_signed_in? && current_user.is_a?(Creator)
    %li#create
      = link_to "Share Your Work", new_story_path, :class => "tooltipped", :title => "Share Your Work"
  - else
    %li#create.disabled
      = link_to "Become a Creator", become_a_creator_users_path, :class => "tooltipped", :title => "Become a Creator"
    
  - if !user_signed_in?
    %li#join
      = link_to "Sign Up", "#join-modal"
    %li#signin
      = link_to "Log In", "#login-modal"
  
  - if user_signed_in?
    - if current_user.coins > 0
      %li#coins
        .text reward money to give out
        .amount= link_to number_to_currency(current_user.coins * Reward.dollar_exchange)
    %li#profile
      = link_to "Your Profile", user_path(current_user)
      %ul.subnav
        %li= link_to "Your Profile", user_path(current_user)
        - if current_user.is_a?(Creator)
          %li= link_to "Share Your Work", new_story_path
        - else
          %li= link_to "Become A Creator", become_a_creator_users_path
        = link_to "Settings", settings_user_path(current_user)
        - if current_user.is_admin?
          %li= link_to "Admin", admin_dashboard_path
        %li= link_to "Log out", destroy_user_session_path
  - else
    %li#profile.disabled
      = link_to "Your Profile", "#join-modal", :class => "tooltipped", :title => "Your Profile"
  
  %li#info
    = link_to "About Momeant", "#about-modal"
    %ul.subnav
      %li= link_to "About Momeant", "#about-modal"
      - if user_signed_in?
        %li= link_to "Give Feedback", "#feedback-modal"
      %li= link_to "Terms of Service", tos_path

  %li#search
    = form_tag search_path, :method => :get do
      = text_field_tag :query, params[:query]
      = submit_tag "Search", :id => "search-submit", :name => ""