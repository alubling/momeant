#user-nav
  = link_to("Momeant", root_path, :id => "logo")

  %ul
    - if user_signed_in?
      %li#profile
        = link_to("Profile", library_path)
      %li#faq
        = link_to("FAQ", "#")        
      %li#topics
        = link_to("Topics", "#", :class => "tooltipped", :title => "Topics")
      %li#recommendations
        = link_to("Recommendations", recommended_stories_path, :class => "tooltipped", :title => "Recommendations")
      %li#create
        = link_to("Create a Story", new_story_path, :class => "tooltipped", :title => "Create") if can? :create, Story
      %li#balance
        = link_to(current_user.credits, credits_path, :class => "tooltipped", :title => "Credits")
      %li#hi
        Hello #{link_to(current_user.name, library_path)}!
        (#{link_to("Sign out", destroy_user_session_path, :class => "signout-link")})
    - else
      %li#faq
        = link_to("FAQ", "#")        
      %li#topics
        = link_to("Topics", "#", :class => "tooltipped", :title => "Topics")
      %li#signup
        = link_to("Sign up", new_user_registration_path)
      %li#signin
        = link_to("Sign in", new_user_session_path)

    %li#search
      = form_tag search_stories_path, :method => :get do
        = text_field_tag :query, "", :placeholder => "search momeant"
        = submit_tag "Search", :id => "search-submit", :name => ""