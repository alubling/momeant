#user-nav
  .bg
  %ul.links{:class => @hide_search ? "search-hidden" : ""}

    %li#logo.topnav
      = link_to "Momeant", root_path, :class => "top-link"
      %ul.subnav
        %li= link_to "About", about_path
        %li= link_to "Terms of Service", tos_path

    - if user_signed_in?
      %li#curation.topnav{:class => @nav == "following" ? "active" : ""}
        = link_to "Subscriptions", subscriptions_path, :class => "top-link"
      %li#my-links.topnav{:class => @nav == "me" ? "active" : ""}
        = link_to "Profile", user_path(current_user), :class => "top-link"
        %ul.subnav
          %li
            = link_to "Share Your Work", new_story_path if current_user.is_a?(Creator)
            = link_to "Become A Creator", become_a_creator_user_path(current_user) if !current_user.is_a?(Creator)
          %li= link_to "Settings", settings_user_path(current_user)
          - if current_user.is_admin?
            %li= link_to "Admin", admin_dashboard_path
          %li= link_to "Logout", destroy_user_session_path
      %li#feedback= link_to("Feedback", "#feedback-modal")
      
    - else
      %li#join= link_to("Join", "#join-modal")
      %li#signin= link_to("Login", "#login-modal")

    - unless @hide_search
      %li#search
        = form_tag search_path, :method => :get do
          = text_field_tag :query, params[:query]
          = submit_tag "Search", :id => "search-submit", :name => ""