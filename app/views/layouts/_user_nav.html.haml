#user-nav
  .bg
  %ul.links
    %li#logo= link_to("Momeant", root_path)
    %li#home{:class => @nav == "home" ? "active" : ""}
      = link_to("Momeant", root_path, :class => "tooltipped", :title => "Home")
    - if user_signed_in?
      - if can? :create, Story
        %li#create{:class => @nav == "create" ? "active" : ""}
          = link_to("Create a Story", new_story_path, :class => "tooltipped", :title => "Create a Story") if can? :create, Story
      %li#profile{:class => @nav == "profile" ? "active" : ""}
        = link_to("Profile", user_path(current_user), :class => "icon")
        .inner
          .heading Your Links
          %ul
            %li.odd= link_to("Profile", user_path(current_user))
            %li.even= link_to("Bookmarks", user_bookmarks_path(current_user))
            - if current_user.is_a?(Creator)
              %li.odd= link_to("Analytics", analytics_path)
              %li.even= link_to("Settings", edit_user_path(current_user))
              %li.odd= link_to("Sign out", destroy_user_session_path)
            - else  
              %li.odd= link_to("Settings", edit_user_path(current_user))
              %li.even= link_to("Sign out", destroy_user_session_path)
    %li#faq{:class => @nav == "about" ? "active" : ""}
      = link_to("About Us", about_path, :class => "tooltipped", :title => "Tell me more".html_safe)
