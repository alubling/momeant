#user-nav
  .bg
  %ul.links{:class => @hide_search ? "search-hidden" : ""}

    %li#logo= link_to("Momeant", root_path)
    %li#content.topnav{:class => @nav == "content" ? "active" : ""}
      = link_to "Content", content_path, :class => "top-link"
      %ul.subnav
        %li= link_to "Summary", content_path
        %li= link_to "Recommended", recommended_content_path
        %li= link_to "Popular", popular_content_path
        %li= link_to "Newest", newest_content_path
    %li#people.topnav{:class => @nav == "people" ? "active" : ""}
      = link_to "People", people_path, :class => "top-link"
      %ul.subnav
        %li= link_to "Summary", people_path
        %li= link_to "Notable", notable_people_path
        %li= link_to "Top Creators", creators_people_path
        %li= link_to "Top Patrons", patrons_people_path
    %li#activity-nav.topnav{:class => @nav == "activity" ? "active" : ""}
      = link_to "Activity", community_path, :class => "top-link"

    - if user_signed_in?
      - if current_user.is_admin?
        %li#admin.topnav{:class => @nav == "admin" ? "active" : ""}
          = link_to "Admin", admin_dashboard_path, :class => "top-link"
      %li#my-stream
        = link_to image_tag(current_user.avatar.url(:thumbnail)), user_path(current_user), :class => "tooltipped", :title => "You"
      %li#coins{:class => @nav == "coins" ? "active" : ""}
        %a{:href => coins_path}
          .text
            %span reward coins
            %span available
          .amount= current_user.coins
      %li#feedback= link_to("Feedback", "#feedback-modal")
      %li#signout= link_to("Logout", destroy_user_session_path)
      
    - else
      %li#join= link_to("Join", "#join-modal")
      %li#signin= link_to("Login", "#login-modal")

    - unless @hide_search
      %li#search
        = form_tag search_path, :method => :get do
          = text_field_tag :query, params[:query], :placeholder => "search users and content"
          = submit_tag "Search", :id => "search-submit", :name => ""