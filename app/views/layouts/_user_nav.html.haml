#user-nav
  %ul.links
    %li#home
      = link_to("Momeant", root_path, :class => "tooltipped", :title => "Home")
    - if user_signed_in?
      %li#profile
        %span.icon
        .inner
          .heading Your Links
          %ul
            %li.odd= link_to("Profile", user_path(current_user))
            %li.even= link_to("Invite", invite_path)
            %li.odd= link_to("Bookmarks", user_bookmarks_path(current_user))
            - if current_user.is_a?(Creator)
              %li.even= link_to("Analytics", "#")
              %li.odd= link_to("Settings", edit_user_path(current_user))
              %li.even= link_to("Sign out", destroy_user_session_path)
            - else  
              %li.even= link_to("Settings", edit_user_path(current_user))
              %li.odd= link_to("Sign out", destroy_user_session_path)
    %li#faq
      %span.icon
      .inner
        .heading Information
        %ul
          %li.odd= link_to("About Us", "#")
          - if current_user && current_user.active_subscription?
            %li.even= link_to("FAQ", faq_path)
            %li.odd= link_to("Contact", "#")
          - else
            %li.even= link_to("Subscribe", subscribe_path)
            %li.odd= link_to("FAQ", faq_path)
            %li.even= link_to("Contact", "#")
    %li#topics
      %span.icon
      .inner
        .heading Topics
        %ul.topic-list
          - counter = 1
          - Topic.parent_topics.order(:name).each do |topic|
            %li{:class => "#{counter % 2 == 1 ? "odd" : "even"} #{topic.name.downcase}"}= link_to(topic.name, topic_path(topic.name.downcase))
            - counter += 1
    - if user_signed_in?
      %li#recommendations
        %span.icon
        .stream-inner
          = render :partial => "users/recommendation_stream", :locals => {:user => current_user}
      - if can? :create, Story
        %li#create
          = link_to("Create a Story", new_story_path, :class => "tooltipped", :title => "Create a Story") if can? :create, Story
      %li#hi
        Hello #{link_to("#{current_user.name}!", user_path(current_user))}
