#user-nav
  .bg
  %ul.links{:class => @hide_search ? "search-hidden" : ""}
    %li#logo= link_to("Momeant", root_path)
    %li#home{:class => @nav == "home" ? "active" : ""}
      = link_to("Momeant", root_path, :class => "tooltipped", :title => "Home")
    %li#community{:class => @nav == "community" ? "active": ""}
      = link_to("Community", community_path, :class => "tooltipped", :title => "Community")
    - if user_signed_in?
      %li#create{:class => @nav == "create" ? "active" : ""}
        = link_to("Share", new_story_path, :class => "tooltipped", :title => "Share your content")
    %li#faq{:class => @nav == "about" ? "active" : ""}
      = link_to("About Us", about_path, :class => "tooltipped", :title => "Tell me more")
    - if user_signed_in?
      - if current_user.is_admin?
        %li#admin{:class => @nav == "admin" ? "active" : ""}
          = link_to("Admin", admin_live_path, :class => "tooltipped", :title => "Admin")
      %li#coins{:class => @nav == "coins" ? "active" : ""}
        %a{:href => coins_path}
          .text
            %span reward coins
            %span available
          .amount= current_user.coins
      %li#feedback= link_to("Feedback", "#feedback-modal")
      %li#signout= link_to("Logout", destroy_user_session_path)
    - else
      %li#join= link_to("Join", "#join-modal")
      %li#signin= link_to("Login", "#login-modal")
    - unless @hide_search
      %li#search
        = form_tag search_path, :method => :get do
          = text_field_tag :query, params[:query], :placeholder => "search users and content"
          = submit_tag "Search", :id => "search-submit", :name => ""