!!!
%html{html_attrs('en')}
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %meta{ :name => "Description", "http-equiv" => "Description", :content => "" }
    %meta{ :name => "Keywords", "http-equiv" => "Keywords", :content => "" }
    %link{ :id => 'favicon', :href => '/images/favicon.png', :rel => 'icon', :type => 'image/x-icon' }/
    %title
      Momeant
      
    = csrf_meta_tag
      
    = javascript_include_tag "jquery-1.4.3.min", "jquery-ui-1.8.6.min", "jquery.scrollTo-1.4.2-min", "jquery.tipsy", "jquery.placeholder", "jquery.fileuploader", "jquery.fancybox-1.3.4.pack", "jquery.tinyscrollbar.min", "jquery.touchSwipe", "jquery.colorPicker"
    = javascript_include_tag "underscore-min", "rails", "application"
    / [if lt IE 9]
      = javascript_include_tag "http://html5shiv.googlecode.com/svn/trunk/html5.js"
    
    = stylesheet_link_tag "reset", "tipsy", "jquery.fancybox-1.3.4", "colorpicker", "styles"
    
    /[if lt IE 7]
      = stylesheet_link_tag "ie"
    = javascript_include_tag "http://use.typekit.com/sji8gns.js"
    :javascript
      try{Typekit.load();}catch(e){}
    = yield :head
    
  %body.yui-skin-sam{:class => @fullscreen.nil? ? "" : "fullscreen"}
    #wrap
      #main.clearfix
        %header{:class => private_beta? && !current_user ? "hide-nav" : ""}
          .insides
            = render "layouts/user_nav" unless @hide_nav
            .momeant-header
              = link_to("Home", root_path, :id => "logo-large") unless @hide_momeant
              - if !current_user && private_beta?
                = link_to("Beta", root_path, :id => "beta", :class => "round-button")
              - elsif !current_user
                = link_to("Join", new_user_registration_path, :id => "join", :class => "round-button")
              - elsif !@hide_stumble
                = link_to("Stumble", random_stories_path, :id => "stumble", :class => "round-button tooltipped-w", :title => "Show me a random story!")
              = yield :header
            
        #mid
          .insides
            = render "layouts/flash", :flash => flash
            = yield

    #footer
      .insides
        Copyright Â© 2011 - Momeant
    
    - if !current_user && !private_beta?
      = render "shared/join_login_modal"

    =# render "analytics"
    = yield :javascript