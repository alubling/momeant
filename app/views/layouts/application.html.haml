!!!
%html{html_attrs('en')}
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %meta{ :name => "Description", "http-equiv" => "Description", :content => "Reinventing patronage for the digital renaissance." }
    %meta{ :name => "Keywords", "http-equiv" => "Keywords", :content => "momeant, digital content, creators, reward, patron, art, community, sustainable" }
    %link{ :id => 'favicon', :href => '/images/favicon.png', :rel => 'icon', :type => 'image/x-icon' }
    %title
      - if @page_title
        = "Momeant - #{@page_title}"
      - else
        Momeant
      
    = csrf_meta_tag
      
    = javascript_include_tag "jquery-1.4.3.min", "jquery-ui-1.8.6.min", "jquery.scrollTo-1.4.2-min", "jquery.tipsy", "jquery.placeholder", "jquery.fileuploader", "jquery.fancybox-1.3.4.pack", "jquery.tinyscrollbar.min", "jquery.touchSwipe", "jquery.colorPicker", "jquery.validate.min", "jquery.masonry.min"
    = javascript_include_tag "stories/show"
    = javascript_include_tag "underscore-min", "rails", "streams", "application"
    / [if lt IE 9]
      = javascript_include_tag "http://html5shiv.googlecode.com/svn/trunk/html5.js"
    
    = stylesheet_link_tag "reset", "tipsy", "jquery-ui-1.8.14.custom", "jquery.fancybox-1.3.4", "colorpicker", "creator_text_styles", "styles", "extras"
    
    /[if lt IE 7]
      = stylesheet_link_tag "ie"
    = javascript_include_tag "http://use.typekit.com/sji8gns.js"
    :javascript
      try{Typekit.load();}catch(e){}
      var typekit_id = 'sji8gns';
    = yield :head
    
  %body{:class => @fullscreen.nil? ? "" : "fullscreen"}
    %header#header
      = render "layouts/user_nav" unless @hide_nav

    #container{:class => @nosidebar ? "no-sidebar" : ""}
      #main
        = render "layouts/flash", :flash => flash
        #call-to-action
          = yield :call_to_action
        = yield

    #footer
      .insides
        .left
          Copyright Â© 2011 - Momeant
        .right
          = link_to("about", about_path)
          = link_to("privacy policy", privacy_path)
          = link_to("terms of service", tos_path)
    
    - if !current_user
      = render "shared/join_modal"
      = render "shared/login_modal"
    = yield :modals

    = render "shared/analytics" if Rails.env.production?
    = yield :javascript
    
    - if session[:show_content]
      .hidden= link_to("", session[:show_content], :id => "auto-launch-story-link")
      :javascript
        $(document).ready(function() {
          setup_modal_presenter_links('#auto-launch-story-link',true);
        });
      - session[:show_content] = nil